<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mobidoc</title>
    <style>
        body {
       position: relative;
     }
 
     .background-text {
       position: fixed;
       top: 0;
       left: 0;
       right: 0;
       bottom: 0;
       z-index: -1;
       font-size: 50px;
       color: #000000;
       opacity: 0.1;
       pointer-events: none;
     }

         body{
           background-color: #1BD7BB;
           padding: 150px 50px 100px 650px;
         }
         .LOGINBTN{
           margin-left: 20px;
           font-weight: 650;
           background-color: #08B3E5;
           border: 1px solid #d5d9d9;
           border-radius: 8px;
           box-shadow: rgba(213, 217, 217, .5) 0 2px 5px 0;
           box-sizing: border-box;
           color: #0f1111;
           cursor: pointer;
           display: inline-block;
           font-family: "Amazon Ember",sans-serif;
           font-size: 13px;
           line-height: 29px;
           padding: 0 10px 0 11px;
           position: relative;
           text-align: center;
           text-decoration: none;
           user-select: none;
           -webkit-user-select: none;
           touch-action: manipulation;
           vertical-align: middle;
           width: 100px;}
         .NUSERBTN{
           font-weight: 650;
           background-color: #2AF598;
           border: 1px solid #d5d9d9;
           border-radius: 8px;
           box-shadow: rgba(213, 217, 217, .5) 0 2px 5px 0;
           box-sizing: border-box;
           color: #0f1111;
           cursor: pointer;
           display: inline-block;
           font-family: "Amazon Ember",sans-serif;
           font-size: 13px;
           line-height: 29px;
           padding: 0 10px 0 11px;
           position: relative;
           text-align: center;
           text-decoration: none;
           user-select: none;
           -webkit-user-select: none;
           touch-action: manipulation;
           vertical-align: middle;
           width: 100px;}
         </style>
          <script>
           document.addEventListener("DOMContentLoaded", function() {
             const body = document.querySelector("body");
             const screenWidth = window.innerWidth;
             const screenHeight = window.innerHeight;
       
             const numTexts = 20; 
             const texts = Array.from({ length: numTexts }, () => createBackgroundText());
       
             texts.forEach(function(text) {
               body.appendChild(text);
             });
       
             function createBackgroundText() {
               const text = document.createElement("div");
               text.classList.add("background-text");
               text.textContent = "Mobidoc";
       
               const randomX = Math.floor(Math.random() * screenWidth);
               const randomY = Math.floor(Math.random() * screenHeight);
       
               text.style.transform = `translate(${randomX}px, ${randomY}px)`;
       
               return text;
             }
           });
         </script>
</head>
